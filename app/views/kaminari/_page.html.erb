<% if page.current? %>
  <li class="page-item active">
    <%=  content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link' %> <!-- rel: page.rel -->
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link' %> <!-- rel: page.rel -->
  </li>
<% end %>
