<% content_for(:title, @user) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to t('編集'), edit_profile_path, class:"btn btn-success float-right" %>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">
              <span class="translation_missing">メールアドレス</span>
            </th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th scope="row">
              <span class="translation_missing">氏名</span>
            </th>
            <td><%= @user.decorate.full_name %></td>
          </tr>
          <tr>
            <th scope="row">
              <span class="translation_missing">アバター</span>
            </th>
              <td><%= image_tag @user.avatar.url, class:"rounded-circle", width:"50", height:"50" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
