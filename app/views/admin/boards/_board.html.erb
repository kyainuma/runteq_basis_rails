<tbody>
  <tr>
    <th scope="row"><%= board.id %></th>
    <th scope="row"><%= link_to board.title, admin_board_path(board) %></th>
    <th scope="row"><%= board.user.decorate.full_name %></th>
    <th scope="row"><%= l board.created_at, format: :long %></th>
    <th scope="row">
      <%= link_to t('defaults.edit'), edit_admin_board_path(board), class:"btn btn-success" %>
      <%= link_to t('defaults.delete'), admin_board_path(board),
                                        method: :delete,
                                        data: { confirm: t('defaults.message.delete_confirm') },
                                        class: "btn btn-danger" %>
    </th>
  </tr>
</tbody>
