<% content_for(:title, t('.title')) %>
<% content_for(:admin_title, t('.admin_title')) %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <div class="login-box">
        <!-- /.login-logo -->
        <div class="card">
          <div class="card-body login-card-body">
            <%= form_with url: admin_login_path, method: :post, local: true do |f| %>
              <div class="form-group has-feedback">
                <%= f.label :email, t('activerecord.attributes.user.email') %><br />
                <%= f.text_field :email, class: "form-control" %>
              </div>
              <div class="form-group has-feedback">
                <%= f.label :password, User.human_attribute_name(:password) %><br />
                <%= f.password_field :password, class: "form-control" %>
              </div>
              <div class="row">
                <div class="actions col-4">
                  <%= f.submit (t 'defaults.login'), class: "btn btn-primary" %>
                </div>
              </div>
            <% end %>
          </div>
          <!-- /.login-card-body -->
        </div>
      </div>
      <!-- /.login-box -->
    </div>
  </div>
</div>
