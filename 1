<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <p id="notice"><%= notice %></p>
      <h1><%= t '.title' %></h1>
      <%= form_with model: @user, url: profile_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, t('activerecord.attributes.user.email') %><br />
          <%= f.text_field :email, class: "form-control" %>
        </div>
       
        <div class="form-group">
          <%= f.label :last_name, t('activerecord.attributes.user.last_name') %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :first_name, t('activerecord.attributes.user.first_name') %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :avatar, t('activerecord.attributes.user.avatar'), for: 'file-input' %>
          <%= f.file_field :avatar, onchange: 'previewImage()', class: 'form-control mb-3', accept: 'image/*', id: 'file-input' %>
          <%= f.hidden_field :avatar_cache %>
        </div>

        <div class='mt-3 mb-3'>
          <% if @user.avatar.present? %>
            <%= image_tag @user.avatar.url, id: :img_prev, class: "rounded-circle", width:"100", height:"100" %>
          <% else %>
            <%= image_tag 'sample.jpg', id: :img_prev, class: "rounded-circle", width:"100", height:"100" %>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit (t 'defaults.edit'), class: "btn btn-primary" %>
        </div> 
      <% end %>
    </div>
  </div>
</div>

